{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

procedure TDMPrincipal.DataModuleCreate(Sender: TObject);
begin
     conexao    := TConexao.Create( FDConnection );
end;

procedure TDMPrincipal.DataModuleDestroy(Sender: TObject);
begin
    conexao.Destroy;
end;

end.
